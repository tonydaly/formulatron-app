%html
  %head
    %title
      FormulatronApp
    = stylesheet_link_tag    "application"
    = stylesheet_link_tag "http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .topbar
      .fill
        .container
          = link_to "Formulatron", "#", class: "brand"
          %ul.nav
            %li.active
              = link_to 'Home', "#"
            %li
              = link_to "About", '#'
            %li
              = link_to "Contact", '#'

    .container
      .content
        .page-header
          %h1
            Formulatron App
            %small Test application to showoff Formulatron
        .row
          .span10
            = yield  
          .span4
            %h3 Secondary content

      %footer
        %p Tony Daly 2011
      
