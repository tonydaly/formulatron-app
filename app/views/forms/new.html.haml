= form_for @form do |f|
  %fieldset
    .clearfix 
      = f.label :name, "Form Name"
      .input
        = f.text_field :name, class: 'xxlarge'
    .clearfix 
      = f.label :description, "Form Description"
      .input
        = f.text_area :description, rows: 3, class: 'xxlarge'
        %span.help-block
          Brief description of your form with instructions on how to complete.
  
  %fieldset
    %legend Fields

    = f.fields_for :elements do |element_form|
      .clearfix
        = render partial: 'element_fields', :locals => { :f => element_form }
    %p= link_to_add_fields "Add Field", f, :elements

  %p= f.submit "Save", class: 'btn primary'